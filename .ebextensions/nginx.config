files:
  "/etc/nginx/conf.d/custom_header.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      client_max_body_size 20M;
      
      map $http_upgrade $connection_upgrade {
        default "upgrade";
        "" "close";
      }

container_commands:
  01_reload_nginx:
    command: "sudo service nginx reload"
    ignoreErrors: true
